{
  "name": "ps1-style-texture-generator",
  "version": "1.0.3",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "concurrently \"tsc -p tsconfig.electron.json --watch\" \"node electron-dev.js\"",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yumehiko/ps1-style-texture-generator.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yumehiko/ps1-style-texture-generator/issues"
  },
  "homepage": "https://github.com/yumehiko/ps1-style-texture-generator#readme",
  "description": "Convert images to PlayStation 1 style low-resolution textures",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/three": "^0.178.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.178.0"
  },
  "build": {
    "appId": "com.ps1texture.generator",
    "productName": "PS1 Style Texture Generator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "!dist/**/*.map",
      "!**/*.ts",
      "!**/test/**",
      "!**/*.test.*"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "src/assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "PS1-Style-Texture-Generator-${version}-${arch}.${ext}",
      "title": "PS1 Style Texture Generator",
      "window": {
        "size": "400x500"
      }
    },
    "electronVersion": "28.3.3",
    "publish": {
      "provider": "github",
      "owner": "yumehiko",
      "repo": "ps1-style-texture-generator"
    }
  }
}
